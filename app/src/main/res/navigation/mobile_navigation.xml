<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="cs160.final_proj_drawer.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_nav_home_to_search"
            app:destination="@id/fragment_search"
            app:launchSingleTop="false" />
        <action
            android:id="@+id/action_nav_home_to_itin"
            app:destination="@id/fragment_itin" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="cs160.final_proj_drawer.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_create"
        android:name="cs160.final_proj_drawer.ui.create.CreateFragment"
        android:label="@string/menu_create"
        tools:layout="@layout/fragment_create" >
        <action
            android:id="@+id/action_nav_create_to_review"
            app:destination="@id/reviewItineraryFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_tools"
        android:name="cs160.final_proj_drawer.ui.tools.ToolsFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/nav_saved"
        android:name="cs160.final_proj_drawer.ui.saved.SavedFragment"
        android:label="@string/menu_saved"
        tools:layout="@layout/fragment_saved" />

    <fragment
        android:id="@+id/nav_posted"
        android:name="cs160.final_proj_drawer.ui.posted.PostedFragment"
        android:label="@string/menu_posted"
        tools:layout="@layout/fragment_posted" />
    <fragment
        android:id="@+id/fragment_search"
        android:name="cs160.final_proj_drawer.ui.home.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_to_itin"
            app:destination="@id/fragment_itin" />
    </fragment>

    <fragment
        android:id="@+id/reviewItineraryFragment"
        android:name="cs160.final_proj_drawer.ui.create.ReviewItineraryFragment"
        android:label="fragment_review_itinerary"
        tools:layout="@layout/fragment_review_itinerary" />

    <fragment
        android:id="@+id/fragment_itin"
        android:name="cs160.final_proj_drawer.ui.itin.DisplayMultItinsFragment"
        android:label="fragment_itin"
        tools:layout="@layout/fragment_display_itins" >
        <action
            android:id="@+id/action_itin_to_filter"
            app:destination="@+id/fragment_filter"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_filter"
        android:name="cs160.final_proj_drawer.ui.home.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" />

</navigation>