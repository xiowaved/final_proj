<!--            android:text="date" />-->

        <ImageView
            android:id="@+id/like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:layout_toRightOf="@+id/text"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>