<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginBottom="5dip"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/colorOffWhite"
    app:cardCornerRadius="@dimen/roundCorners">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover_img"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/sceniclookouts" />


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:text="text"
            android:fontFamily="@font/manjaribold"
            android:textColor="@color/colorOffWhite"
            android:textSize="@dimen/card_text"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="@dimen/card_icons"
            android:layout_height="@dimen/card_icons"
            android:layout_alignBottom="@+id/cover_img"
            android:layout_alignEnd="@+id/cover_img"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/like" />


        <ImageView
            android:id="@+id/bkmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/like"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/figmabkmkwhite" />



        <TextView
            android:id="@+id/numLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/like"
            android:layout_alignLeft="@+id/like"
            android:layout_alignBottom="@+id/cover_img"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="100"
            android:fontFamily="@font/manjaribold"
            android:textColor="@color/colorOffWhite"
            android:textSize="14sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>